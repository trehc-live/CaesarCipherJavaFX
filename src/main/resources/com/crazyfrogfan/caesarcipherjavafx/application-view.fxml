<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.crazyfrogfan.caesarcipherjavafx.Controller">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>


  <Label fx:id="welcomeText" style="color: green" styleClass="welcomeText">welcome</Label>

  <TextField fx:id="key" prefWidth="20"/>

  <Label fx:id="progressStateText" styleClass="progressStateText"/>
  <Button text="Choose in file.." onAction="#onChooseInButtonClick"/>
  <Button text="Choose out file.." onAction="#onChooseOutButtonClick"/>
  <Button text="Encode file" onAction="#onEncodeButtonClick"/>
</VBox>
